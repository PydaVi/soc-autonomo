<script language="JavaScript"><!--

function isValidNumber(string) {
	return /^((\+|-)\d)?\d*$/.test(string);
}
function ValidateNumber(el){
	if (isValidNumber(el.value) == false){
        alert("Please enter a valid number.");
        el.focus();
        return false;
	} else return true;}

function isReady(form) 
{
if (ValidateNumber(form.d0) == false) return false;
if (ValidateNumber(form.t0) == false) return false;
if (ValidateNumber(form.r0) == false) return false;
if (ValidateNumber(form.d1) == false) return false;
if (ValidateNumber(form.t1) == false) return false;
if (ValidateNumber(form.r1) == false) return false;
if (ValidateNumber(form.d2) == false) return false;
if (ValidateNumber(form.t2) == false) return false;
if (ValidateNumber(form.r2) == false) return false;
if (ValidateNumber(form.d3) == false) return false;
if (ValidateNumber(form.t3) == false) return false;
if (ValidateNumber(form.r3) == false) return false;
if (ValidateNumber(form.d4) == false) return false;
if (ValidateNumber(form.t4) == false) return false;
if (ValidateNumber(form.r4) == false) return false;
if (ValidateNumber(form.d5) == false) return false;
if (ValidateNumber(form.t5) == false) return false;
if (ValidateNumber(form.r5) == false) return false;
if (ValidateNumber(form.d6) == false) return false;
if (ValidateNumber(form.t6) == false) return false;
if (ValidateNumber(form.r6) == false) return false;
if (ValidateNumber(form.d7) == false) return false;
if (ValidateNumber(form.t7) == false) return false;
if (ValidateNumber(form.r7) == false) return false;
return true;
}
