function checkLoginInfo(form)
{
	if(form.userid.value == "")
	{
		alert("Please provide the User ID.");
		form.userid.focus();
		return false;
	}
	if(form.password.value == "")
	{
		alert("Please provide the Password.");
		form.password.focus();
		return false;
	}
	return true;
}

function checkUDPR(form)
{
	if(form.userDefine.value == "")
	{
		alert("Please provide the required value.");
		form.userDefine.focus();
		return false;
	}
	return true;
}

function setFocus()
{
	if(document.login.userDefine){
		document.login.userDefine.focus();
	}else{
		document.login.userid.focus();
	}
}
