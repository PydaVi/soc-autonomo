function checkSubmit(form)
{
	if(form.bdyndns.value == "ENABLED")
	{
		if(form.dyn_dn.value == "")
		{
			alert("Please provide the Dynamic DNS domain name.");
			form.dyn_dn.focus();
			return false;
		}
		if(form.dyn_user.value == "")
		{
			alert("Please provide the Dynamic DNS user name.");
			form.dyn_user.focus();
			return false;
		}
		if(form.dyn_pwd.value == "")
		{
			alert("Please provide the Dynamic DNS password.");
			form.dyn_pwd.focus();
			return false;
		}
		if(form.dyn_pwdcf.value == "")
		{
			alert("Please provide the Dynamic DNS password.");
			form.dyn_pwdcf.focus();
			return false;
		}
		
		var rTok, ret0=-1, ret1=-1, ret2=-1, ret3=-1, ret4=-1, ret5=-1, ret6=-1, ret7=-1, ret8=-1, ret9=-1;
		rTok = /:/g;  ret0 = form.dyn_user.value.search(rTok);
		rTok = /</g;  ret1 = form.dyn_user.value.search(rTok);
		rTok = />/g;  ret2 = form.dyn_user.value.search(rTok);
		rTok = /&/g;  ret3 = form.dyn_user.value.search(rTok);
		rTok = /'/g;  ret4 = form.dyn_user.value.search(rTok);
		rTok = /"/g;  ret5 = form.dyn_user.value.search(rTok);
		rTok = /\./g;  ret6 = form.dyn_user.value.search(rTok);
		rTok = /@/g;  ret7 = form.dyn_user.value.search(rTok);
		rTok = /,/g;  ret8 = form.dyn_user.value.search(rTok);
		rTok = / /g;  ret9 = form.dyn_user.value.search(rTok);
		if(ret0>=0 || ret1>=0 || ret2>=0 || ret3>=0 || ret4>=0 || ret5>=0 || ret6>=0 || ret7>=0 || ret8>=0 || ret9>=0) 
		{
			alert("You should not use following characters in username : :< >&,\"\'.@blanks");
			form.dyn_user.select();
			return false;
		}
		ret0=-1;
		rTok = / /g;  ret0 = form.dyn_pwd.value.search(rTok);
		if(ret0>=0) 
		{
			alert("You should not use blank characters in password");
			form.dyn_pwd.select();
			return false;
		}
		ret0=-1;
		rTok = / /g;  ret0 = form.dyn_pwdcf.value.search(rTok);
		if(ret0>=0) 
		{
			alert("You should not use blank characters in password");
			form.dyn_pwdcf.select();
			return false;
		}
		if(form.dyn_pwdcf.value != form.dyn_pwd.value)
		{
			alert("Password mismatch. Please confirm again");
			form.dyn_pwd.select();
			return false;
		}
	}

/*	for(i=0; i<form.elements.length; i++)
	{
		form.elements[i].disabled=false;
	}*/
	return true;
}

function checkvalue()
{
	if(document.configure.bdyndns.value == "DISABLED")
	{
		document.configure.dyn_dn.disabled=true;
		document.configure.dyn_user.disabled=true;
		document.configure.dyn_pwd.disabled=true;
		document.configure.dyn_pwdcf.disabled=true;
	}
	else
	{
		document.configure.dyn_dn.disabled=false;
		document.configure.dyn_user.disabled=false;
		document.configure.dyn_pwd.disabled=false;
		document.configure.dyn_pwdcf.disabled=false;
	}
}