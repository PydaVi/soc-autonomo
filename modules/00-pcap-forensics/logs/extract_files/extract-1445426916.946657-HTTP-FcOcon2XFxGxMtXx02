   function check_dotted_number(dotted_string) { 
           var dotted_sub_string = ''; 
                   var dotted_sub_int = 0; 
                   var sub_string_count = 0; 
                   var char_x; 
                   if (dotted_string.length == 0) return false; 
                   if (dotted_string.charAt(0) == ".") return false; 
                   for (var i=0; i <= dotted_string.length; i++) { 
                   valid_flag = 0; 
                   char_x = dotted_string.charAt(i); 
                   if (char_x == '0') valid_flag = 1;
                   if (char_x == '1') valid_flag = 1;
                   if (char_x == '2') valid_flag = 1;
                   if (char_x == '3') valid_flag = 1;
                   if (char_x == '4') valid_flag = 1;
                   if (char_x == '5') valid_flag = 1;
                   if (char_x == '6') valid_flag = 1;
                   if (char_x == '7') valid_flag = 1;
                   if (char_x == '8') valid_flag = 1;
                   if (char_x == '9') valid_flag = 1;
                   if (valid_flag == 1) { 
                   dotted_sub_string = dotted_sub_string + char_x;
                   } 
                   else { 
                   if ((char_x == '.') || (dotted_string.length >= i)) { 
                           dotted_sub_int = dotted_sub_string - 0; 
                           if ((dotted_sub_int > 255)||(dotted_sub_string.length == 0)) return false; 
                           valid_flag = 0; 
                           dotted_sub_string = ''; 
                           sub_string_count = sub_string_count + 1; 
                   } 
                   else { 
                           return false;
                   } 
                   } 
                   } 
                   if (sub_string_count == 4) return true; 
           return false;
   } 

