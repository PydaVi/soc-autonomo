function confirmRemove(idx)
{
	var port, manufacturer, title;
	var form=document.list;
	if(idx==0 && form.count.value==1){
		port=form.port.value;
		manufacturer=form.manufacturer.value;
		title=form.title.value;
	}else{
		port=form.port[idx].value;
		manufacturer=form.manufacturer[idx].value;
		title=form.title[idx].value;
	}
	if(confirm("You have asked to remove the " + manufacturer + " power controller on port #" + port + ".[" + title + "]\r\n" +
		"This will stop all communication to the power controller and remove all outlets from the associated serial ports and power controller.\r\n" +
		"Would you remove it?")){
		document.remove.port.value=port;
		document.remove.submit();
	}
}
function checkvalue()
{
	var form=document.add;
	if(form.manufacturer.selectedIndex==0){//Baytech
		form.cascading.disabled=true;
	}else{//RPM
		form.cascading.disabled=false;
	}
}
